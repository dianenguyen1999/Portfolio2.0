<h1>Edit Project</h1>

<%= form_with(model: @project, url: project_path(@project), method: :patch, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, required: true %>
  </div>

  <div class="field">
    <%= form.label :technologies_used %>
    <%= form.text_field :technologies_used %>
  </div>

  <!-- Add more fields as needed -->

  <div class="actions">
    <%= form.submit 'Update Project' %>
  </div>
<% end %>

<%= link_to 'Cancel', project_path(@project) %>
