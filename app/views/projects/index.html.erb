<h1>My Portfolio</h1>

<% if @projects.present? %>
  <div class="projects">
    <% @projects.each do |project| %>
      <div class="project">
        <h2><%= link_to project.title, project %></h2>
        <p><%= truncate(project.description, length: 150) %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No projects found.</p>
<% end %>

